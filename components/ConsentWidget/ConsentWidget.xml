<?xml version="1.0" encoding="utf-8" ?>

<component name="ConsentWidget" extends="Group" >
    <script type="text/brightscript" uri="ConsentWidget.brs" />
    <script type="text/brightscript" uri="ConsentWidgetLogic.brs" />
    <script type="text/brightscript" uri="RegistryService.brs" />
    <interface>
        <field id="availableZones" type="assocarray" value="{}" />
        <field id="userAccepted" type="boolean" />
    </interface>
    <children>
        <Group>
            <Rectangle
                id = "bg"
                >
                <CheckList
                    id = "checklist"
                    />
                <Label
                    id = "title"
                    />
                <Button
                    id = "confirmButton"
                    />
            </Rectangle>
        </Group>
    </children>
</component>
